<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.BTechStudentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_11sdp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/ECEStudentCardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_95sdp"
                android:elevation="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_11sdp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorOne">

                    <TextView
                        android:id="@+id/tvECE2019Student"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:text="ECE Students"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="0.8"
                        />


                    <ImageView
                        android:id="@+id/imgECE2019StudentNext"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/imgnext"
                        android:layout_weight="0.2"
                        />



                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/CSEStudentCardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_95sdp"
                android:elevation="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_11sdp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorOne">

                    <TextView
                        android:id="@+id/tvCSE2019Student"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:text="CSE Students"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="0.8"
                        />


                    <ImageView
                        android:id="@+id/imgCSE2019StudentNext"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/imgnext"
                        android:layout_weight="0.2"
                        />



                </LinearLayout>


            </androidx.cardview.widget.CardView>





        </LinearLayout>



    </ScrollView>

</LinearLayout>