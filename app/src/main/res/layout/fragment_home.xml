<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Ambedkar Institute of Advanced Communication Technologies and Research, Geeta Colony, Delhi"
                    android:background="@color/purple_200"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right"
                android:autoStart="true"
                android:layout_margin="@dimen/_2sdp"
                android:flipInterval="2000">

                <ImageView
                    android:id="@+id/bannerOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/bannerone"
                    android:layout_margin="@dimen/_5sdp"
                    />
                <ImageView
                    android:id="@+id/bannerTwo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/bannertwo"
                    />
                <ImageView
                    android:id="@+id/bannerThree"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/bannerthree"
                    />

                <ImageView
                    android:id="@+id/bannerFour"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/bannerfour"
                    />


            </ViewFlipper>

            <TextView
                android:layout_margin="@dimen/_11sdp"
                android:id="@+id/tvIntroHomeFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/introduction"
                android:textSize="@dimen/_10sdp"
                android:textStyle="italic"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:src="@drawable/antiragging"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="Anti-Ragging"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:src="@drawable/ipulogo"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="Affiliation"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"

                        />

                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:src="@drawable/aicte_png"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="Accreditation"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:src="@drawable/ieee_png"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="IEEE"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"

                        />

                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:src="@drawable/nss_png"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="NSS"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:src="@drawable/nsut_png"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="NSUT"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"

                        />

                </LinearLayout>




            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Campus Location"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="@dimen/_18sdp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp">

                <androidx.fragment.app.FragmentContainerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/collegeMap"
                    android:tag="FagMap"
                    android:name="com.example.campusconnect_aiactr.Fragments.collegeMapsFragment"

                    >
                </androidx.fragment.app.FragmentContainerView>


            </androidx.constraintlayout.widget.ConstraintLayout>





        </LinearLayout>
    </ScrollView>

</LinearLayout>