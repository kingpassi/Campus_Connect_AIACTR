<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FacultyFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="11dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorOne"
            >

            <TextView
                android:id="@+id/tvFacultyDirector"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="AIACTR Director"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.8"
                />


            <ImageView
                android:id="@+id/imgFacultyDirectorNext"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:src="@drawable/imgnext"
                android:layout_weight="0.2"
                />




        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="11dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorOne">

            <TextView
                android:id="@+id/tvFacultyECE"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="ECE Faculty"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.8"
                />


            <ImageView
                android:id="@+id/imgFacultyECENext"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:src="@drawable/imgnext"
                android:layout_weight="0.2"
                />




        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="11dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorOne">

            <TextView
                android:id="@+id/tvFacultyCSE"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="CSE Faculty"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.8"
                />


            <ImageView
                android:id="@+id/imgFacultyCSENext"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:src="@drawable/imgnext"
                android:layout_weight="0.2"
                />




        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="11dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorOne">

            <TextView
                android:id="@+id/tvFacultySAH"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="SAH Faculty"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.8"
                />


            <ImageView
                android:id="@+id/imgFacultySAHNext"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:src="@drawable/imgnext"
                android:layout_weight="0.2"
                />




        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="11dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorOne">

            <TextView
                android:id="@+id/tvFacultyMech"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="Mech, EEE Faculty"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.8"
                />


            <ImageView
                android:id="@+id/imgFacultyMechNext"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:src="@drawable/imgnext"
                android:layout_weight="0.2"
                />




        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>